<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="CONFIRMATION" styleName="pageTitle"/>
    		<g:HorizontalPanel width="100%" spacing="5">
    			<g:Label text="Application ID" ui:field="lblApplicationInfo"/>
    			<g:Label text="Step 5 of 5" horizontalAlignment="ALIGN_RIGHT"/>
    		</g:HorizontalPanel>
    		<g:VerticalPanel width="900px" styleName="subSection" horizontalAlignment="ALIGN_CENTER">
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
    				<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" width="80%" spacing="10">
    				<g:Label text="SELECTED ITEMS" styleName="sectionTitle"/>
    				<g:FlexTable width="100%" ui:field="tblItems"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Total (CHF)" styleName="lablel_TotalAmount"/>
    					<g:Label text="." styleName="lablel_TotalAmount" horizontalAlignment="ALIGN_RIGHT" ui:field="lblTotalAmount"/>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    			</g:VerticalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:CheckBox text="I have read, understood and agree with the Generail and Financial Conditions, the Cancellation Policy and/or premature departure policy." width="" ui:field="chkConditionAgreement"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Grid width="80%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Place / Date" styleName="fieldTitle"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox styleName="sis_textbox" ui:field="txtDatePlace"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Surname / First name" styleName="fieldTitle"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox styleName="sis_textbox" ui:field="txtFullName"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    			</g:VerticalPanel>
    		<g:FlowPanel width="900px">
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="35%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="cmdPreviousStep" text="Previous">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Save &amp; Continue">Next Step</g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
