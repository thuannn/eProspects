<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="CONFIRMATION" styleName="pageTitle"/>
    		<g:HorizontalPanel width="100%" spacing="5">
    			<g:Label text="Application ID" ui:field="lblApplicationInfo"/>
    			<g:Label horizontalAlignment="ALIGN_CENTER" styleName="redNotice" text="You MUST complete the application until page 6 (PAYMENT OPTIONS) and click&#10;on FINISH (button), otherwise you application is not sent/valid."/>
    			<g:Label text="Step 5 of 5" horizontalAlignment="ALIGN_RIGHT"/>
    		</g:HorizontalPanel>
    		<g:VerticalPanel width="900px" styleName="subSection" horizontalAlignment="ALIGN_CENTER" spacing="5">
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER">
    				<g:VerticalPanel horizontalAlignment="ALIGN_LEFT" width="80%" spacing="10">
    				<g:Label text="SELECTED ITEMS" styleName="sectionTitle"/>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Start date:"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="." ui:field="lblStartDate"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Duration (week):"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="." ui:field="lblDuration"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:FlexTable width="100%" ui:field="tblItems"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Total (CHF)" styleName="lablel_TotalAmount"/>
    					<g:Label text="." styleName="lablel_TotalAmount" horizontalAlignment="ALIGN_RIGHT" ui:field="lblTotalAmount"/>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    			</g:VerticalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:CheckBox text="I have read and understood the General and Financial Conditions, the Cancellation Policy and/or premature departure policy." width="" ui:field="chkConditionAgreement"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Grid width="80%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Place / Date" styleName="fieldTitle"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox styleName="sis_textbox" ui:field="txtDatePlace"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Surname / First name" styleName="fieldTitle"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox styleName="sis_textbox" ui:field="txtFullName"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:FlowPanel width="900px">
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="35%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="cmdPreviousStep" text="Previous" styleName="button-yellow">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Save &amp; Continue" styleName="button-yellow">Next Step</g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Frame url="https://www.lemaniasummerschool.com/wp-content/uploads/2016/03/SummerCamp2016-GeneralCondition.pdf" width="98%" height="300px"/>
    			</g:VerticalPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
