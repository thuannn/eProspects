<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="CHOICE OF PROGRAMME" styleName="pageTitle"/>
    		<g:HorizontalPanel width="100%" spacing="5">
    			<g:Label text="Application ID" ui:field="lblApplicationInfo"/>
    			<g:Label horizontalAlignment="ALIGN_CENTER" styleName="redNotice" text="You MUST complete the application until page 6 (PAYMENT OPTIONS) and click&#10;on FINISH (button), otherwise you application is not sent/valid."/>
    			<g:Label text="Step 2 of 5" horizontalAlignment="ALIGN_RIGHT"/>
    		</g:HorizontalPanel>
    		<g:FlowPanel width="900px">
    			<g:HorizontalPanel width="100%" spacing="10">
    			<g:VerticalPanel width="100%">
    				<g:Label styleName="sectionTitle" text="Application"/>
    				<g:Label styleName="hiddenText" text="."/>
    				<g:CheckBox text="Enrolment fee: CHF 110.-" checked="true" enabled="false" ui:field="chkApplicaitonFee"/>
    				<g:CheckBox text="Health insurance pack: CHF 210.- (mandantory for boarders)" ui:field="chkPackAssurance"/>
    				<g:Label styleName="hiddenText" text="."/>
    				<g:Label text="Choice of programme" styleName="sectionTitle"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Programme"/>
    						</g:customCell>
    						<g:customCell>
    							<g:ListBox ui:field="lstProgrammes"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="." styleName="hiddenText"/>
    						</g:customCell>
    						<g:customCell>
    							<g:ListBox ui:field="lstCourses"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Language choices"/>
    						</g:customCell>
    						<g:customCell>
    							<g:ListBox ui:field="lstLanguageOptions"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:Cell verticalAlignment="ALIGN_MIDDLE">
    					<g:Grid width="100%" cellPadding="2">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Starting date"/>
    						</g:customCell>
    						<g:customCell>
    							<g:ListBox ui:field="lstStartDate"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="(dd/MM/yyyy)"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Number of weeks"/>
    						</g:customCell>
    						<g:customCell>
    							<g:ListBox ui:field="lstWeekNumber"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Reccomandation : at least 2 weeks"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				</g:Cell>
    				<g:CheckBox text="I would like to continue my study after the summer programme" ui:field="chkContinueAfter"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Accomodation - Boarding house" styleName="sectionTitle"/>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Private room"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="new name" text="Comfort plus" ui:field="optConfortPlusPrivate"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="new name" text="Comfort" ui:field="optConfortPrivate"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="new name" text="Standard" ui:field="optStandardPrivate"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Shared room (two twin beds)"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="new name" text="Comfort plus" ui:field="optConfortPlusShare"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="new name" text="Comfort" ui:field="optConfortShare"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="new name" text="Standard" ui:field="optStandardShare"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:Label text="Early booking is recommended as there is a limited number of boarding places. Students must arrive on Sundy afternoon and leave on Saturday morning."/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Key deposit" styleName="sectionTitle"/>
    				<g:Label text="Students must pay a deposit for their room key upon arrival. This amount will be refunded when the key is returned on their departure. There will be no refund if the key is lost."/>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Choice of deposit currency"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="deposit" text="CHF 100.-" ui:field="optKeyDepositCHF"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="deposit" text="€ 100.-" ui:field="optKeyDepositEuro"/>
    						</g:customCell>
    						<g:customCell>
    							<g:RadioButton name="deposit" text="US$ 100.-" ui:field="optKeyDepositUSD"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    			</g:VerticalPanel>
    			<g:VerticalPanel width="250px" styleName="subSection" spacing="2">
    				<g:Label text="Selected items" styleName="sectionTitle"/>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Start date:"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="." ui:field="lblStartDate"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Duration (week):"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="." ui:field="lblDuration"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:FlexTable width="100%" ui:field="tblItems"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Total (CHF)" styleName="lablel_TotalAmount"/>
    					<g:Label text="." styleName="lablel_TotalAmount" horizontalAlignment="ALIGN_RIGHT" ui:field="lblTotalAmount"/>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:HorizontalPanel>
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="100%" visible="false">
    					<g:Label text="July"/>
    					<g:TextBox styleName="sis_textbox_readonly" width="100px" ui:field="txtJulyWeek" readOnly="true"/>
    					<g:Label text="(Standard course)"/>
    					<g:Label text="August"/>
    					<g:TextBox styleName="sis_textbox_readonly" width="100px" ui:field="txtAugustWeek" readOnly="true"/>
    					<g:Label text="(Intensive course)"/>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel width="35%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="cmdPreviousStep" text="Previous" styleName="button-yellow">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Save &amp; Continue" styleName="button-yellow">Next Step</g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
