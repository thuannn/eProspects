<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="OPTIONAL SERVICES" styleName="pageTitle"/>
    		<g:HorizontalPanel width="100%" spacing="5">
    			<g:Label text="Application ID" ui:field="lblApplicationInfo"/>
    			<g:Label horizontalAlignment="ALIGN_CENTER" styleName="redNotice" text="You MUST complete the application until page 6 (PAYMENT OPTIONS) and click&#10;on FINISH (button), otherwise you application is not sent/valid."/>
    			<g:Label text="Step 3 of 5" horizontalAlignment="ALIGN_RIGHT"/>
    		</g:HorizontalPanel>
    		<g:FlowPanel width="900px">
    			<g:HorizontalPanel width="100%" spacing="10">
    			<g:VerticalPanel width="100%" spacing="2">
    				<g:Label text="Private course" styleName="sectionTitle"/>
    				<g:CheckBox text="Private language tuition: 100 CHF per lesson" styleName="fieldTitle" ui:field="optPrivateCourse"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="If you would like private tuition, please specify the number of lessons desired per week:"/>
    					<g:TextBox ui:field="txtPrivateCoursePeriod"/>
    				</g:HorizontalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Limousine shuttle service" styleName="sectionTitle"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="One-way"/>
    					<g:ListBox ui:field="lstAirportDirection"/>
    					<g:CheckBox text="Geneva airport, CHF 270.- / trajet" ui:field="chkGeneveOneway"/>
    					<g:CheckBox text="Zurich airport, CHF 970.- / trajet" ui:field="chkZurichOneway"/>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Round trip"/>
    					<g:CheckBox text="Geneva airport, CHF 540.-" ui:field="chkGeneveRoundtrip"/>
    					<g:CheckBox text="Zurich airport, CHF 1940.-" ui:field="chkZurichRoundtrip"/>
    				</g:HorizontalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Flight information, if already known, for the airport shuttle service"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Name of airline" styleName="fieldTitle"/>
    					<g:TextBox styleName="sis_textbox" ui:field="txtAirlineName"/>
    				</g:HorizontalPanel>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Arrival date"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Flight number"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox ui:field="txtArriveVol"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Arrival time"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox ui:field="txtArriveTime"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Departure date"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Flight number"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox ui:field="txtDepartVol"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Departure time"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox ui:field="txtDepartTime"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Letter for visa application" styleName="sectionTitle"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:CheckBox text="Visa, invoice or confirmation letter sent by express mail: CHF 120.-" ui:field="chkVisaLetterRequest"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="N.B. : A visa is required for foreign (non-EU) students. It takes at least 5-7 working days to send this visa from Switzerland to foreign countries by normal mail (free of charge). Please take account of the time required to obtain the visa. If possible, we must receive your enrolement application and payment at least 4 weeks before your arrival date for summer courses."/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="For boarding student only: Pocket money held in safe-keeping" styleName="sectionTitle"/>
    				<g:Label text="Would you like to send additional pocket money for your child?"/>
    				<g:HorizontalPanel width="100%">
    					<g:RadioButton name="new name" text="Yes" ui:field="optMoneyDepositYes"/>
    					<g:RadioButton name="new name" text="No" ui:field="optMoneyDepositNo"/>
    					<g:Label text="If yes, amount if CHF"/>
    					<g:TextBox ui:field="txtMoneyDepositAmount"/>
    				</g:HorizontalPanel>
    				<g:Label text="The school shall keep this money in a safe and give the required amount to the child if necessary."/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="For external students only" styleName="sectionTitle"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:CheckBox text="5 lunches per week for external students: CHF 90.- per week" ui:field="chkMealPackage"/>
    				<g:CheckBox text="Activity Pack: 5-6 activities, for external students, from Tuesday to Friday and/or Saturday afternoons: CHF 300.-" ui:field="chkActivitiesPackage" width=""/>
    				<g:Label text="N.B. : All activities and meals are included for boarders."/>
    			</g:VerticalPanel>
    			<g:VerticalPanel width="250px" styleName="subSection">
    				<g:Label text="Selected items" styleName="sectionTitle"/>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Start date:"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="." ui:field="lblStartDate"/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Duration (week):"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="." ui:field="lblDuration"/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:FlexTable width="100%" ui:field="tblItems"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Total (CHF)" styleName="lablel_TotalAmount"/>
    					<g:Label text="." styleName="lablel_TotalAmount" horizontalAlignment="ALIGN_RIGHT" ui:field="lblTotalAmount"/>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:HorizontalPanel>
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="35%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="cmdPreviousStep" text="Previous" styleName="button-yellow">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Save &amp; Continue" styleName="button-yellow">Next Step</g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
