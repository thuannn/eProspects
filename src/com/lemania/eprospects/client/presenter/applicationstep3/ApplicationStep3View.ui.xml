<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="SERVICE FACULTATIFS" styleName="pageTitle"/>
    		<g:Label text="Step 3 of 5"/>
    		<g:FlowPanel width="900px">
    			<g:HorizontalPanel width="100%" spacing="10">
    			<g:VerticalPanel width="100%">
    				<g:Label text="Cours privé" styleName="sectionTitle"/>
    				<g:CheckBox text="Cours privé de langue 90 CHF par période" styleName="fieldTitle"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Si OUI, veuillez préciser le nombre de prériodes souhaitées par semaine :"/>
    					<g:TextBox styleName="sis_textbox"/>
    				</g:HorizontalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Service de Limousine" styleName="sectionTitle"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Aller simple"/>
    					<g:ListBox ui:field="lstAirportDirection"/>
    					<g:Label text="l&apos;aeroport de"/>
    					<g:CheckBox text="Genève, CHF 260.- / trajet"/>
    					<g:CheckBox text="Zurich, CHF 960.- / trajet"/>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Aller-retour vers l&apos;aeroport de"/>
    					<g:CheckBox text="Genève, CHF 520.-"/>
    					<g:CheckBox text="Zurich, CHF 1&apos;920.-"/>
    				</g:HorizontalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Information du vol pour le transfert aéroport, si déjà connus"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Nom de la compagnie" styleName="fieldTitle"/>
    					<g:TextBox styleName="sis_textbox"/>
    				</g:HorizontalPanel>
    				<g:Grid width="100%">
    					<g:row>
    						<g:customCell>
    							<g:Label text="Date arrivée"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Numéro de vol"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Heure d&apos;arrivée"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox/>
    						</g:customCell>
    					</g:row>
    					<g:row>
    						<g:customCell>
    							<g:Label text="Date départ"/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Numéro de vol"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox/>
    						</g:customCell>
    						<g:customCell>
    							<g:Label text="Heure de départ"/>
    						</g:customCell>
    						<g:customCell>
    							<g:TextBox/>
    						</g:customCell>
    					</g:row>
    				</g:Grid>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Lettre de Visa" styleName="sectionTitle"/>
    				<g:CheckBox text="Envoi par courrier express de la lettre de Visa, facture ou lettre de confirmation : CHF 80.-"/>
    				<g:Label text="Note : La lettre de visa pour les étudiants étrangers (hors UE) est nécessaire. Par courrier normal (envoie gratuit), cela prend 5-7 jours minimum ouvrés pour recevoir la lettre depuis la Suisse vers l&apos;étranger. Veuillez tenir compte des délais d&apos;obtention du visa, votre demande d&apos;inscription et le paiement doivent, si possible, nous parvenir au minimum quatre semaines avant votre date d&apos;arrivée pour les cours d&apos;été."/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Argent de poche en dépôt" styleName="sectionTitle"/>
    				<g:Label text="Pour les étudiants internes seulement : Argent de poche en dépôt"/>
    				<g:Label text="Souhaitez-vous verser de l&apos;argent de poche supplémentaire au profit de votre enfant ?"/>
    				<g:HorizontalPanel width="100%">
    					<g:RadioButton name="new name" text="Oui"/>
    					<g:RadioButton name="new name" text="Non"/>
    					<g:Label text="Si oui, montant en CHF"/>
    					<g:TextBox/>
    				</g:HorizontalPanel>
    				<g:Label text="L&apos;école conserve cet argent dans un coffre-fort et donne le montant nécessaire à l&apos;élève en cas de besoin."/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Forfait supplémentaire" styleName="sectionTitle"/>
    				<g:Label text="Pour les étudiants externes seulement"/>
    				<g:CheckBox text="Forfait 5 repas du midi pour les externes : CHF 80.- par semaine"/>
    				<g:CheckBox text="Pack d&apos;activités pour les élèves externes : 5-6 activités, du lundi au vendredi et/ou samedi, les après-midi : CHF 230.-"/>
    				<g:CheckBox text="Assurance santé facultative CHF 190.-"/>
    				<g:Label text="Note : Toutes les activités et repas sont inclus pour les élèves internes."/>
    			</g:VerticalPanel>
    			<g:VerticalPanel width="250px" styleName="subSection">
    				<g:Label text="ELEMENTS CHOISIS" styleName="sectionTitle"/>
    				<g:FlexTable width="100%"/>
    				<g:Label text="Total"/>
    			</g:VerticalPanel>
    		</g:HorizontalPanel>
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="20%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="cmdPreviousStep">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Suivant">Next Step</g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
