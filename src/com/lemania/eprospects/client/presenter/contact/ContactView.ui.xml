<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" spacing="2">
			<g:Label text="CONTACT" horizontalAlignment="ALIGN_CENTER" styleName="pageTitle"/>
			<g:VerticalPanel width="100%" spacing="20">
				<g:Label text="Nous sommes à votre disposition pour toutes vos questions ou conseils. Merci de nous contacter en utilisant le formulaire ci-dessous."/>
				<g:Grid width="600px" cellPadding="5" styleName="subSection">
					<g:row>
						<g:customCell>
							<g:Label text="Nom :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox styleName="sis_textbox" ui:field="txtLastName"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Prénom :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox styleName="sis_textbox" ui:field="txtFirstName"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Email :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox styleName="sis_textbox" ui:field="txtEmail"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Message :"/>
						</g:customCell>
						<g:customCell>
							<g:TextArea width="478px" height="300px" ui:field="txtMessage"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="." styleName="hiddenText"/>
						</g:customCell>
						<g:customCell>
							<g:Button width="100px" ui:field="cmdSend" styleName="button-yellow">Envoyer</g:Button>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
