<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="GENERAL INFORMATION" styleName="pageTitle"/>
    		<g:HorizontalPanel width="100%" spacing="5">
    			<g:Label text="Application ID:" ui:field="lblApplicationInfo"/>
    			<g:Label text="You MUST complete the application until page 6 (PAYMENT OPTIONS) and click&#10;on FINISH (button), otherwise you application is not sent/valid." horizontalAlignment="ALIGN_CENTER" styleName="redNotice"/>
    			<g:Label text="Step 1 of 5" horizontalAlignment="ALIGN_RIGHT"/>
    		</g:HorizontalPanel>
    		<g:FlowPanel width="900px" ui:field="pnlStep1">
    			<g:Label text="Student" styleName="sectionTitle"/>
    			<g:Grid width="100%">
    			<g:row>
    				<g:customCell>
    					<g:Label text="Gender" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:ListBox ui:field="lstGender"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Surname" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtLastName_Student"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="First name" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtFirstName_Student"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Date of birth" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtDOB_Student"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="Nationality" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtNationality_Student"/>
    				</g:customCell>
    			</g:row>
    		</g:Grid>
    			<g:HorizontalPanel width="100%" spacing="4" horizontalAlignment="ALIGN_LEFT">
    						<g:Label text="Address (Street, No.)" styleName="requiredField"/>
    						<g:TextBox styleName="sis-textbox-long" ui:field="txtAddress_Student"/>
    					</g:HorizontalPanel>
    			<g:Grid width="100%">
    			<g:row>
    				<g:customCell>
    					<g:Label text="Post code / Town or City" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtCity_Student"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="Country" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtCountry_Student"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Email" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtEmail_Student"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="Mobile no. (for activities)" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtMobilePhone_Student"/>
    				</g:customCell>
    			</g:row>
    		</g:Grid>
    			<g:Label text="Parents / Guardians" styleName="sectionTitle"/>
    			<g:Grid width="100%">
    			<g:row>
    				<g:customCell>
    					<g:Label text="Surname" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtLastName_Parents"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="First name" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtFirstName_Parents"/>
    				</g:customCell>
    			</g:row>
    		</g:Grid>
    			<g:HorizontalPanel width="100%" spacing="4">
    						<g:Label text="Address (Street, No.)" styleName="requiredField"/>
    						<g:TextBox styleName="sis-textbox-long" ui:field="txtAddress_Parents"/>
    					</g:HorizontalPanel>
    			<g:Grid width="100%">
    			<g:row>
    				<g:customCell>
    					<g:Label text="Post code / Town or City" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtCity_Parents"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="Country" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtCountry_Parents"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Mobile no. (Mother)" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txt_MobilePhone_Mother"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="Mobile no. (Father)" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtMobilePhone_Father"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Home phone" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtHomePhone_Parents"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="Work phone" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtWorkPhone_Parents"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Fax" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtFax_Parents"/>
    				</g:customCell>
    				<g:customCell>
    					<g:Label text="Email" styleName="requiredField"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis_textbox" ui:field="txtEmail_Parents"/>
    				</g:customCell>
    			</g:row>
    		</g:Grid>
    			<g:Label text="Address for invoice and confirmation letter (if different from parents&apos; address)" styleName="sectionTitle"/>
    			<g:Grid width="100%">
    			<g:row>
    				<g:customCell>
    					<g:Label text="Company name" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis-textbox-long" ui:field="txtCompanyName_Invoice"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Full name of responsible person" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis-textbox-long" ui:field="txtFullName_Invoice"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Address (Street, No.)" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis-textbox-long" ui:field="txtAddress_Invoice"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Post code / Town or City" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis-textbox-long" ui:field="txtCity_Invoice"/>
    				</g:customCell>
    			</g:row>
    			<g:row>
    				<g:customCell>
    					<g:Label text="Country" styleName="fieldTitle"/>
    				</g:customCell>
    				<g:customCell>
    					<g:TextBox styleName="sis-textbox-long" ui:field="txtCountry_Invoice"/>
    				</g:customCell>
    			</g:row>
    		</g:Grid>
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="30%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="button" visible="false" text="Previous">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Save &amp; Continue" styleName="button-yellow">Next Step</g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
