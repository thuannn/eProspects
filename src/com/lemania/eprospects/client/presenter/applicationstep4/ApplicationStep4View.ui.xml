<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="MEDICAL ET REGIME ALIMENTAIRE" styleName="pageTitle"/>
    		<g:Label text="Step 4 of 5"/>
    		<g:FlowPanel width="900px">
    			<g:HorizontalPanel width="100%" spacing="10">
    			<g:VerticalPanel width="100%">
    				<g:Label text="L&apos;élève a-t-il/elle un problème de santé, nécessite-t-il un traitement ou un régime spécifique ou a-t-il handicap spécifique dont nous devrons avoir connaissance ?"/>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:HorizontalPanel width="100%">
    					<g:RadioButton name="HealthProblem" text="Oui" ui:field="optHealthProblemYes"/>
    					<g:RadioButton name="HealthProblem" text="Non" ui:field="optHealProblemNo"/>
    					<g:Label text="Si oui, veuillez préciser" styleName="fieldTitle"/>
    					<g:TextArea styleName="sis-TextArea" ui:field="txtHealthProblem"/>
    				</g:HorizontalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="L&apos;élève est-il sujet à des allergies ?"/>
    				<g:HorizontalPanel width="100%">
    					<g:RadioButton name="Allergy" text="Oui" ui:field="optAllergyYes"/>
    					<g:RadioButton name="Allergy" text="Non" ui:field="optAllergyNo"/>
    					<g:Label text="Si oui, lesquelles" styleName="fieldTitle"/>
    					<g:TextArea styleName="sis-TextArea" ui:field="txtAllergy"/>
    				</g:HorizontalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="L&apos;élève doit-il prendre un traitement/médicament particulier ?"/>
    				<g:HorizontalPanel width="100%">
    					<g:RadioButton name="Medical" text="Oui" ui:field="optMedicalYes"/>
    					<g:RadioButton name="Medical" text="Non" ui:field="optMedicalNo"/>
    					<g:Label text="Si oui, lequel (posologie)" styleName="fieldTitle"/>
    					<g:TextArea styleName="sis-TextArea" ui:field="txtMedical"/>
    				</g:HorizontalPanel>
    				<g:Label text="." styleName="hiddenText"/>
    				<g:Label text="Autres"/>
    				<g:HorizontalPanel width="100%">
    					<g:TextArea styleName="sis-TextArea" ui:field="txtOther" width="600px" height="200px"/>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    			<g:VerticalPanel width="250px" styleName="subSection">
    				<g:Label text="ELEMENTS CHOISIS" styleName="sectionTitle"/>
    				<g:FlexTable width="100%" ui:field="tblItems"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Total  CHF" styleName="lablel_TotalAmount"/>
    					<g:Label text="Amount" styleName="lablel_TotalAmount"/>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:HorizontalPanel>
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="35%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="cmdPreviousStep">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Enregistrer &amp; Suivant &gt;&gt;">Next Step</g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
