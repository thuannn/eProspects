<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="POSSIBILITES DE PAIEMENT" styleName="pageTitle"/>
    		<g:Label text="." styleName="hiddenText"/>
    		<g:FlowPanel width="900px">
    			<g:HorizontalPanel width="100%" spacing="10">
    				<g:VerticalPanel width="400px" styleName="subSection" spacing="10">
    				<g:Label text="ELEMENTS CHOISIS" styleName="sectionTitle"/>
    				<g:FlexTable width="100%" ui:field="tblItems"/>
    				<g:HorizontalPanel width="100%">
    					<g:Label text="Total" styleName="lablel_TotalAmount"/>
    					<g:Label text="." styleName="lablel_TotalAmount" horizontalAlignment="ALIGN_RIGHT" ui:field="lblTotalAmount"/>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    				<g:VerticalPanel width="100%" spacing="10">
    					<g:RadioButton name="payment" text="PAYPAL" checked="true" ui:field="optPaypal"/>
    					<g:HTML wordWrap="true" ui:field="htmlPaypalButton"/>
    					<g:RadioButton name="payment" text="VIREMENT BANCAIRE" ui:field="optBankTransfer"/>
    					<g:Image url="images/virement_bancaire.png"/>
    					<g:RadioButton name="payment" text="PAIEMENT DIRECT" ui:field="optPayDirect"/>
    					<g:Label text="Je suis résident suisse et je souhaite effectuer le paiement, au plus tard quatre semaines avant le début du cours d&apos;été, directement au secrétariat de l&apos;Ecole Lémania, Chemin de Préville 3, à Lausanne."/>
    					<g:HorizontalPanel width="100%" ui:field="pnlOptionDirect" visible="false">
    						<g:Label text="Je paierai"/>
    						<g:RadioButton name="direct" text="En espèce" ui:field="optDirectCash"/>
    						<g:RadioButton name="direct" text="Par carte de crédit" ui:field="optDirectCard"/>
    					</g:HorizontalPanel>
    				</g:VerticalPanel>
    		</g:HorizontalPanel>
    			<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
    				<g:HorizontalPanel width="20%" horizontalAlignment="ALIGN_RIGHT" spacing="10">
    				<g:Button ui:field="cmdPreviousStep">Précédant</g:Button>
    			<g:Button ui:field="cmdNextStep" text="Terminer" visible="false"></g:Button>
    		</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:FlowPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
