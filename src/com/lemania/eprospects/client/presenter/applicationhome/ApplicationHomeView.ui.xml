<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main" width="">
    	<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="Welcome"/>
    		<g:Label text="Some text here"/>
    		<g:Label text="Choose a programme to apply :"/>
    		<g:ListBox ui:field="lstProgrammes"/>
    		<g:Label text="Type in your email address to start the application process :"/>
    		<g:HorizontalPanel>
    			<g:TextBox ui:field="txtEmail"/>
    			<g:Button text="Start the application" ui:field="cmdStartApplication"/>
    		</g:HorizontalPanel>
    	</g:VerticalPanel>
    </g:SimplePanel>
</ui:UiBinder>
