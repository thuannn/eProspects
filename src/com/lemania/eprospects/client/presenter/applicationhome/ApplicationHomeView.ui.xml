<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <g:SimplePanel ui:field="main" width="" styleName="body">
    	<g:VerticalPanel width="100%" height="" horizontalAlignment="ALIGN_CENTER">
    		<g:Label text="Ecole LÃ©mania - Online application" styleName="pageTitle"/>
    		<g:Image url="images/inscription-title.png"/>
    		<g:Label text="." styleName="hiddenText"/>
    		<g:Label text="Please choose a programme to apply :"/>
    		<g:ListBox ui:field="lstProgrammes"/>
    		<g:Label text="." styleName="hiddenText"/>
    		<g:Label text="Please type in your email to start the application processes:"/>
    		<g:HorizontalPanel>
    			<g:TextBox ui:field="txtEmail"/>
