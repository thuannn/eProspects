    		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" ui:field="pnlApplicationIdRequest" visible="false" styleName="subSection">
    			<g:Label text="Your email has been found in our database, please choose either creating a new application, or edit an existing one:"/>
    			<g:HorizontalPanel spacing="5">
    				<g:RadioButton name="new name" text="New application" ui:field="optNew"/>
    				<g:RadioButton name="new name" text="Edit an exising application, please type in the Application ID:" ui:field="optModify"/>
    				<g:TextBox ui:field="txtApplicationId"/>
    			</g:HorizontalPanel>
    		</g:VerticalPanel>
    		<g:Label text="."/>
    		<g:Button text="Start" ui:field="cmdStartApplication"/>
    		<g:Label text="." styleName="hiddenText"/>
    	</g:VerticalPanel>
    </g:SimplePanel>
