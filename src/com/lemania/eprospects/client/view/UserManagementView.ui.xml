<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" spacing="2" horizontalAlignment="ALIGN_LEFT">
			<g:Label text="GESTION DES UTILISATEURS" styleName="pageTitle" width="900" horizontalAlignment="ALIGN_CENTER"/>
			<g:HorizontalPanel width="80%" visible="false" ui:field="pnlAdd">
				<g:Grid width="100%">
					<g:row>
						<g:customCell>
							<g:Label text="Nom &amp; PrÃ©nom :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtFullName"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Nom d&apos;utilisateur :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtUserName"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Mot de passe :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtPassword"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Email :"/>
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="txtEmail"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="." styleName="hiddenText"/>
						</g:customCell>
						<g:customCell>
							<g:Button text="Ajouter" ui:field="cmdAdd"/>
						</g:customCell>
					</g:row>
					<g:row/>
				</g:Grid>
			</g:HorizontalPanel>
			<g:HorizontalPanel spacing="5" verticalAlignment="ALIGN_MIDDLE">
				<g:Label text="Filtre :"/>
				<g:ListBox width="300px" ui:field="lstUserTypes"/>
			</g:HorizontalPanel>
			<g:Cell width="100%">
				<p1:DataGrid width="100%" height="450px" ui:field="tblUser"/>
			</g:Cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
