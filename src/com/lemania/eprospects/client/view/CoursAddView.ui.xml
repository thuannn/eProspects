<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<g:VerticalPanel width="100%" spacing="2">
			<g:Label text="AJOUTER UN NOUVEAU PROGRAMME" styleName="pageTitle" horizontalAlignment="ALIGN_CENTER"/>
			<g:Grid cellPadding="5" cellSpacing="5" width="80%">
				<g:row>
					<g:customCell>
						<g:Label text="Nom de l&apos;Ã©cole :"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="lstEcoles" styleName="sis_textbox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Nom du programme :"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox width="" ui:field="txtCoursNom" styleName="sis_textbox"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Actif :"/>
					</g:customCell>
					<g:customCell>
						<g:CheckBox ui:field="chkActif" checked="true"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label/>
					</g:customCell>
					<g:customCell>
						<g:HorizontalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
							<g:HorizontalPanel width="70%">
								<g:Button ui:field="cmdAjouter" text="Enregistrer">Ajouter</g:Button>
								<g:Button ui:field="cmdAnnuler">Annuler</g:Button>
							</g:HorizontalPanel>
						</g:HorizontalPanel>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
