				<g:row>
					<g:customCell>
						<g:Label text="E-mail (nom d&apos;utilisateur) :"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="txtEmail" width="" styleName="sis_textbox"/>
