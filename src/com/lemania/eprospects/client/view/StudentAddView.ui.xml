				<g:row>
					<g:customCell>
						<g:Label text="." styleName="hiddenText"/>
					</g:customCell>
					<g:customCell>
						<g:Label ui:field="lblStatus"/>
					</g:customCell>
				</g:row>
			</g:Grid>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder>
